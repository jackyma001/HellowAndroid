<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linearLayout1" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" 
	android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:text="每天记忆单词数：" 
    	android:id="@+id/textView1" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content"
    	android:textSize="18sp"
    	android:layout_marginLeft="5dip">
    </TextView>
	<EditText android:id="@+id/txtWordPerDay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:singleLine="true"
        android:layout_marginLeft="5dip"
    android:inputType="number" android:text="500"/>
	<TextView android:text="计划起始日期：" 
		android:id="@+id/textView2" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:textSize="18sp"
		android:layout_marginLeft="5dip"
		android:layout_marginTop="10dip">
	</TextView>
	
    <DatePicker android:id="@+id/dpStartDate" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="5dip">
    </DatePicker>
    <Button android:text="生成计划" 
    	android:id="@+id/btnGenerate" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_marginTop="20dip"
    	android:layout_marginLeft="5dip">
    	</Button>
    	
    	 <Button android:text="清除所有计划" 
    	android:id="@+id/btnClear" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_marginTop="20dip"
    	android:layout_marginLeft="5dip">
    	</Button>
</LinearLayout>
