<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
   		android:id="@+id/relativeLayout1" 
    	android:layout_width="fill_parent" 
    	android:layout_height="fill_parent"
    	xmlns:android="http://schemas.android.com/apk/res/android">

  <RelativeLayout 
   		android:id="@+id/relativeLayout1" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true"
    	xmlns:android="http://schemas.android.com/apk/res/android">
      <TextView android:id="@+id/txt_word" 
	    android:text="word" 
	    android:textSize="40sp"
	  	android:padding="3dip"
	    android:layout_height="wrap_content" 
	    android:layout_width="fill_parent" 
		android:layout_alignParentTop="true" 
		android:gravity="center_vertical|center_horizontal"/> 
	   <ImageView android:id="@+id/imgLine1" 
      android:layout_width="fill_parent" 
      android:background="#FF909090"
      android:layout_height="1dip"
      android:layout_below="@id/txt_word"/>
      <TextView android:id="@+id/txt_pron"
      	android:text="pron"                                        
        android:textSize="24sp"
        
        android:gravity="left"
        android:padding="3dip"
        android:layout_width="wrap_content"  
		android:layout_height="wrap_content"
		android:layout_below="@id/imgLine1"
		android:layout_margin="5dip" />
	   <ImageButton android:src="@drawable/speaker32"
        android:id="@+id/img_speak"
        android:layout_width="80dip"  
		android:layout_height="wrap_content" 
		
		android:layout_alignTop="@id/txt_pron"
		android:layout_alignParentRight="true" 
		android:layout_margin="5dip">
      </ImageButton>	
	  <ImageView android:id="@+id/imgLine2" 
	      android:layout_width="fill_parent" 
	      android:background="#FF909090"
	      android:layout_height="1dip"
	      android:layout_below="@id/img_speak"/>	
    </RelativeLayout>
<ScrollView android:id="@+id/scrollView1" 
	android:layout_width="fill_parent" 
	android:layout_height="300dip"
	android:layout_below="@id/relativeLayout1"
	xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 		android:id="@+id/scrollPart"  
	 	android:layout_width="fill_parent" 
	 	android:layout_height="fill_parent"
	 	android:orientation="vertical"  >
	 	 <TextView android:id="@+id/txt_shiyi"  
 	   		android:text="释义:"                                       
			android:textSize="18sp"
			android:padding="3dip"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"/>
    	<TextView android:id="@+id/txt_description"                                    
			android:textSize="18sp"
			android:gravity="left"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 	
			android:padding="5dip"/>

	      
	     <TextView android:id="@+id/lbl_example"  
 	   		android:text="例句:"                                       
			android:textSize="18sp"
			android:padding="3dip"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			/>
		<TextView android:id="@+id/txt_example" 
			android:padding="5dip"                                   
			android:textSize="16sp"
			android:gravity="left"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			/>
			
</LinearLayout>
</ScrollView>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 		android:id="@+id/button_bar"  
	 	android:layout_width="fill_parent" 
	 	android:layout_height="wrap_content" 
		android:orientation="horizontal" 
		android:layout_alignParentBottom="true">
		<Button android:id="@+id/bt_true" 
			android:layout_width="fill_parent"  
			android:layout_height="wrap_content"  
			android:text="不认识"  
			android:layout_weight="1">
			</Button>
		<Button android:id="@+id/bt_false"  
			android:layout_width="fill_parent"  
			android:layout_height="wrap_content"  
			android:text="认识"  
			android:layout_weight="1"
			>
		</Button>  
		  
</LinearLayout> 
</RelativeLayout>